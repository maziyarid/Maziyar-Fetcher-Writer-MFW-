{
    "name": "maziyarid/mfw",
    "description": "Modern Framework for WordPress AI",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "maziyarid",
            "homepage": "https://github.com/maziyarid"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MFW\\": "includes/"
        },
        "files": [
            "includes/helpers/functions.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}